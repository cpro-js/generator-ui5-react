{
  "plugins": [
    "@prettier/plugin-xml",
    "prettier-plugin-imports",
    "prettier-plugin-packagejson"
  ],
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "singleAttributePerLine": false,
  "importOrderParsers": ["typescript", "jsx", "decorators"],
  "overrides": [
    {
      "files": [
        "*.html",
        "*.xml"
      ],
      "options": {
        "xmlSelfClosingTags": true,
        "xmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}

